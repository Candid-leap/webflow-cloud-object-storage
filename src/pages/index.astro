---
import Layout from '../layouts/Layout.astro';
import FileUploader from '../components/FileUploader';
import { isAuthenticated } from '../utils/auth';

const env = Astro.locals.runtime?.env || {};
// Get base path and normalize it (remove trailing slash if present, except for root)
const rawBasePath = import.meta.env.BASE_URL || '';
const basePath = rawBasePath === '/' ? '' : rawBasePath.replace(/\/$/, '');

// Check authentication
const authenticated = await isAuthenticated(Astro.request, env);

if (!authenticated) {
	return Astro.redirect(`${basePath}/login`, 302);
}
---

<Layout>
  <main>
    <FileUploader client:load />
  </main>
</Layout>

<style>
  main {
    min-height: 100vh;
    padding: 20px;
  }
</style>
